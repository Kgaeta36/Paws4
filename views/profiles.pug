doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title= title
    link(rel='stylesheet', type='text/css', href='/css/style.css')
  body
    
    #headerImage
      img(src='/images/SampleBanner.jpg' width="1900" height="100" border=" 2px solid black")

    #profileNav
      <h2 style="text-align: center"> Menu</h2>
      ul
        li.nav-item
          a.navbar-brand(href='/') Home
        li.nav-item
          a.nav-link(href='/login') Login
        li.nav-item
          a.nav-link(href='/createUser') Sign Up
        li.nav-item
          a.nav-link(href='/createPet') Create Pet Profile
        li.nav-item
          a.nav-link(href='/createPost') Create Post
        li.nav-item
          a.nav-link(href='/profileSearch') Search for users
        li.nav-item
          a.nav-item(href='/transferPet') Transfer Pet account
        li.nav-item  
          a.nav-item(href='/messages') Message Board
          
    #profilePics 
      h2(style="text-align: center;") Pictures 
      each pet in petData
        img(src=pet.profile_image, width="100", height="100", alt="Pet image", style="margin: 10px;")

      each post in postsData
        img(src=post.posting_image, width="100", height="100", alt="Pet image", style="margin: 10px;")

    #posts
      h2 Posts
      each post in postsData
        .postContainer
          .postData
            img(src=post.posting_image, width="400", height="400", alt="Post image")
            p= post.post_text

        li.nav-item 
          a.nav-link(href='/transferPet') Transfer Pet
        li.nav-item 
          a.nav-link(href="/messages") Messages

    #friends
      <h2 style="text-align: center"> Friends</h2>
      <p style="text-align: center"> friends here</p>

    #petprofiles
      <h2 style="text-align: center"> Pet Profiles</h2>
      each pet in petData
        img(src=pet.profile_image, width="100", height="100", alt="Pet image")
        p  
          a(href="/petProfile?pet_id="+pet.pet_id) #{pet.pet_name}
        br

    #profileInfo
      <h2 style="text-align: center"> UserInfo
      -if (userData.id == user.id){
        a(href="/updateUser") 
          img(src="/images/edit.png" alt="edit" width="25")
      -}
      </h2>

      div(style="display: flex; justify-content: center; align-items: center;")
        img(src=userData.profile_img, width="200", height="200", alt="User profile image")
      <br>
      p User Name: #{userData.user_name}
      p Email: #{userData.email}
      p Language: #{userData.language}
      P Number of Posts: #{postCount}
    block content
